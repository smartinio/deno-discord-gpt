{
  "tasks": {
    "lint": "deno lint --ignore=env.ts",
    "ts": "deno check *.ts"
  },
  "imports": {
    "@openai/openai": "jsr:@openai/openai@^4.102.0"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "proseWrap": "preserve",
    "semiColons": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
